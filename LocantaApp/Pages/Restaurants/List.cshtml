@page
@model ListModel
@{
}

<h1>Restaurants</h1>

<form method="get">

    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />

            <button type="submit" class="btn btn-primary">Search</button>
        </div>

    </div>

</form>

<a class="btn btn-primary" asp-page="./Edit" >
    Add Restaurant
</a>
<table class="table">
    @foreach (var restaurant in Model.restaurants)
    {
        <tr>
            <td>
                @restaurant.Name
            </td>
            <td>
                @restaurant.Location
            </td>
            <td>
                @restaurant.Cuisine
            </td>
            <td>
                <a class="btn btn-success" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">
                    Detail
                </a>
                <a class="btn btn-success" asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">
                    Edit
                </a>
            </td>
        </tr>
    }


</table>


<p>@Model.Message</p>

