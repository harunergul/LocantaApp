@using LocantaApp.Core
@model Restaurant

<div class="card">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>

    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
       
        <a class="btn btn-outline-dark" asp-page="./Detail" asp-route-restaurantId="@Model.Id">
            <i class="fas fa-search-plus"></i>
        </a>
        <a class="btn btn-outline-info" asp-page="./Edit" asp-route-restaurantId="@Model.Id">
            <i class="fas fa-edit"></i>
        </a>
        <a class="btn btn-outline-danger" asp-page="./Delete" asp-route-restaurantId="@Model.Id">
            <i class="far fa-trash-alt"></i>
        </a>
    </div>
</div>